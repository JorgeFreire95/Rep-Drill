# ==============================================
# REP DRILL - Environment Variables Template
# ==============================================
# Copy this file to .env and fill with your values
# NEVER commit .env to version control!

# ==============================================
# Django Core Settings
# ==============================================
DEBUG=False
SECRET_KEY=change-this-to-a-strong-random-secret-key-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================
# Database Configuration
# ==============================================
DB_NAME=rep_drill_db
DB_USER=postgres
DB_PASSWORD=change-this-strong-password
DB_HOST=db
DB_PORT=5432

# ==============================================
# Redis Configuration
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ==============================================
# JWT Authentication
# ==============================================
JWT_SECRET_KEY=change-this-to-a-different-strong-secret
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# ==============================================
# CORS Settings
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ==============================================
# Celery Configuration
# ==============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ==============================================
# Email Configuration (Optional)
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# ==============================================
# Analytics & Forecasting
# ==============================================
PROPHET_CACHE_TIMEOUT=3600
FORECAST_DEFAULT_DAYS=30
MAX_FORECAST_PRODUCTS=100

# ==============================================
# Security Settings
# ==============================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ==============================================
# Monitoring & Logging
# ==============================================
LOG_LEVEL=INFO
SENTRY_DSN=
PROMETHEUS_ENABLED=True

# ==============================================
# Service URLs (Internal)
# ==============================================
AUTH_SERVICE_URL=http://auth:8000
PERSONAS_SERVICE_URL=http://personas:8001
INVENTARIO_SERVICE_URL=http://inventario:8002
VENTAS_SERVICE_URL=http://ventas:8003
ANALYTICS_SERVICE_URL=http://analytics:8005
